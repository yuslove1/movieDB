{
    "version": 2,
    "rewrites": [{ "source": "/(.*)", "destination": "/" }],
    "builds": [
      { "src": "build/**", "use": "@vercel/static-build" },
      {
        "src": "package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/.*",
        "dest": "/index.html"
      }
    ],
    "env": {
      "NODE_VERSION": "16"
    },
    "engines": {
      "node": "16.x"
    },
    "scripts": {
      "build": "vite build"
    }
  }